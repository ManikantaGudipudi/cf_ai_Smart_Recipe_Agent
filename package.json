{
  "name": "smart-recipe-agent",
  "version": "1.0.0",
  "description": "AI-powered Smart Recipe & Meal Planning Agent on Cloudflare",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "build": "npm run build:client && npm run build:worker",
    "build:client": "vite build",
    "build:worker": "esbuild src/worker.js --bundle --format=esm --outfile=dist/worker.js"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "wrangler": "^3.78.12"
  },
  "devDependencies": {
    "esbuild": "^0.24.2",
    "vite": "^5.4.10",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "cloudflare",
    "ai",
    "recipes",
    "meal-planning",
    "llm"
  ],
  "author": "Smart Recipe Agent",
  "license": "MIT"
}
